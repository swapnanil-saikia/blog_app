<% include ./partial/head %>
<div class="ui main text container segment">
    <div class="ui huge header">edit <%= blog.title %></div>
<form class="ui form" action="/blogs/<%= blog._id%>?_method=PUT" method="POST">
    <div class="field">
        <label>title</label>
    <input type="text" name="blog[title]" value="<%= blog.title %>">
    </div>
    <div class="field">
            <label>image</label>
    <input type="text" name="blogs[image]" value="<%=blog.image%>">
</div>
<div class="field">
        <label>blog content</label>
    <textarea name="blogs[body]" placeholder="blog post goes here"><%=blog.body%></textarea>
    <input class="ui violet big basic button" type="submit">

</form>
</div>
<% include ./partial/footer %>